    <p class="font-semibold pr-3">Agenda tu cita</p>
    <a href="tel:7716280886" class="font-semibold flex justify-center items-center" target="_blank"><Phone class="mr-1 mb-[2px] phone"/>7716280886</a>
  </div>
  <div class="w-full lista">
    <nav>
      <a href="/">
        <img src='/logo_valley.png' alt="Logo Harmony" class="w-full">
      </a>
      <button id="Open" class="md:hidden" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <ul class="list" id="menu">
     
          <img src="/cerrar.png" alt="">
          
        
        <li><a href="/">Inicio</a>
          <div class="line"></div>
        </li>
        <li><a href="#Nosotros">Nosotros</a>
        <div class="line"></div>
        </li>
        <li><a href="#Tratamientos">Tratamientos</a>
        <div class="line"></div>
        </li>
        <li><a href="#Promociones">Promociones</a>
        <div class="line"></div>
        </li>
        <li><a href="#Ubicacion">Ubicación</a>
        <div class="line"></div>
        </li>
        <li><a href="https://api.whatsapp.com/send?phone=527716280886" target="_blank" rel="noopener noreferrer" title="Número de WhatsApp de la clínica">Contacto</a>
        <div class="line"></div>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
 
  nav {
    width: 100%;
    height: 65px;
    padding: 0 1rem;
    max-width: 1400px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
 
  .lista {
    background-color:white;
  }
  nav > a {
    width: 65%;
    max-width: 200px;
  }
  .list {
    display: none;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: fixed;
    top: 0;
    right: 0;
    width: 100vw;
    height: 100svh;
    background-color: black;
    list-style: none;
    z-index: 10;
    transform: translateX(-100%);
  }
  .list img{
    width: 20px;
    height: 20px;
    object-fit: cover;
    position: absolute;
    top: 15%;
    right: 7%;
  }
  .list li {
    margin-top: 20px;
    font-size: 25px;
    color: white;
    position: relative;
  }
  .list li a {
    position: relative;
    display: inline-block;
    padding: 10px 15px;
    margin-left: 5px;
    text-align: center;
    font-size: 20px;
    letter-spacing: 1px;
    text-decoration: none;
    color: white;
    background: transparent;
    cursor: pointer;
    transition: ease-out 0.35s;
    border-radius: 10px;
    box-shadow: inset 0 0 0 0 var(--gold-200);
  }
  .line{
    position: absolute;
    bottom: 12px;
    background-color: #cc9900;
    height: 3px;
    width: 0;
    transition: all 0.5s;

  }
  .list li:hover .line{
    background-color: #cc9900;
    height: 3px;
    width: 72%;
    transition: all 0.5s;
    left: 15%;
  }
  button {
    cursor: pointer;
  }
  button span {
    width: 30px;
    height: 4px;
    margin-top: 7px;
    background-color: 	#cc9900;
    display: block;
    border-radius: 5px;
  }
  #Close {
    position: absolute;
    top: 0;
    right: -100px;
    z-index: 11;
   
  }
  #Close i {
    transition: all 0.275s linear;
    color: white;
    font-size: 20px;
  }
  #Close i:hover {
    transition: all 0.275s linear;
    color: rgb(219,182,115);
  }
  header div:nth-last-child(2) {
    background: black;
    color: white;
    display: flex;
    justify-content: space-between;
  }
  @keyframes showMenu {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(0%);
    }
  }
  @keyframes hideMenu {
    0% {
      transform: translate(0%);
    }
    100% {
      transform: translate(-100%);
    }
  }
  @media (min-width: 768px) {
    .list {
      display: flex;
      flex-direction: row;
      justify-content: flex-end;
      align-items: center;
      position: relative;
      width: 70%;
      height: auto;
      background-color: white !important;
      list-style: none;
      z-index: 10;
      transform: translateX(0%);
     
    }
    .list li {
      margin-top: 0;
      font-size: 20px;
    }
    .list li a{
      color: black;
      font-weight: 700;
      font-size: 20px;
    }
    nav {
      justify-content: space-between;
    }
    .lista {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    header div:nth-last-child(2) {
    width: 100%;
    background: #cc9900;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 50px;
    padding: 10px 100px;
    
  }
  header div:nth-last-child(2) p,
  header div:nth-last-child(2) a,
  header div:nth-last-child(2) a i{
    font-size: 20px;
  }
  .phone{
    width: 20px;
    height: 20px;
  }
  }
</style>

<script>
  const abrir = document.getElementById('Open')
  const menu: any = document.getElementById('menu')
  const cerrar = document.getElementById('Close')
  // Create a MediaQueryList object
  var x = window.matchMedia("(max-width: 768px)")

  function matchM(x: any) {
    if (x.matches) {
        abrir?.addEventListener('click', () => {
        menu.style.display = 'flex'
        menu.style.animation = 'showMenu 0.5s forwards'
      })
      cerrar?.addEventListener('click', () => {
        menu.style.animation = 'hideMenu 0.5s forwards'
        setTimeout(() => {
          menu.style.display = 'none'
        }, 500)
      })
      menu?.addEventListener('click', () => {
        menu.style.animation = 'hideMenu 0.5s forwards'
        setTimeout(() => {
          menu.style.display = 'none'
        }, 500)
      })
    }
  }
  // Call listener function at run time
  matchM(x);

  // Attach listener function on state changes
  x.addEventListener("change", function() {
    matchM(x);
  });
</script>